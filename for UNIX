import commands
import os
import string

programm = raw_input("Please enter name program to check: ")

try:
    #do programm ps and save result in list
    output = commands.getoutput("ps - f|grep " + programm)
    proginfo = string.split(output)

    #output to the results
    print"\n\
    Full path:\t\t", proginfo[5], "\n\
    Owner:\t\t", proginfo[0], "\n\
    Process ID:\t\t", proginfo[1], "\n\
    Parent process ID:\t", proginfo[2], "\n\
    Time started this program:\t\t", proginfo[4]
except:
    print "There was a problem with program."
